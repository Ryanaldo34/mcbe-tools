{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Entity Behavior File",
    "description": "The basic structure of a behavior file of an entity",
    "type": "object",
    "properties": {
        "format_version": {
            "type": "string",
            "description": "The format version of the entity"
        },
        "minecraft:entity": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "object",
                    "properties": {
                        "identifier": {
                            "type": "string",
                            "description": "The namespace:identifier of the entity",
                            "pattern": "^[a-z]+:[A-z_]+$"
                        },
                        "is_spawnable": {
                            "type": "boolean"
                        },
                        "is_summonable": {
                            "type": "boolean"
                        },
                        "is_experimental": {
                            "type": "boolean"
                        },
                        "animations": {
                            "type": "object"
                        },
                        "scripts": {
                            "type": "object",
                            "properties": {
                                "animate": {
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "description": "The animation shortnames to be animated"
                                    }
                                }
                            },
                            "required": [ "animate" ]
                        }
                    },
                    "required": [ "identifier" ],
                    "additionalProperties": false
                },
                "component_groups": {
                    "type": "object",
                    "description": "Component groups of the entity",
                    "patternProperties": {
                        "^[a-z]+:[A-z_]+$": {
                            "type": "object",
                            "description": "A component group object"
                        }
                    },
                    "additionalProperties": true
                },
                "components": {
                    "type": "object",
                    "description": "Components of the entity",
                    "properties": {

                    },
                    "additionalProperties": false
                },
                "events": {
                    "type": "object",
                    "description": "Events of the entity",
                    "patternProperties": {
                        "^[a-z]+:[A-z_]+$": {
                            "type": "object",
                            "description": "An entity event object"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "required": [ "description", "components" ]
        }
    }
}